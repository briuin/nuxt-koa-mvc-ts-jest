    "eslint-plugin-standard": "^3.0.1",
    "jest": "^23.4.2",
    "jest-serializer-vue": "^2.0.2",
    "jest-vue-preprocessor": "^1.4.0",
    "koa-log4": "^2.2.1",
    "nodemon": "^1.11.0",
    "nuxt-class-component": "^1.2.1",
    "nuxt-property-decorator": "^1.2.0",
    "nuxt-typescript": "^0.11.0",
    "scmp": "^2.0.0",
