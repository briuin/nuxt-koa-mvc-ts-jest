  },
  "devDependencies": {
    "@types/jest": "^23.3.1",
    "@types/koa": "^2.0.46",
    "@types/koa-router": "^7.0.31",
    "@vue/test-utils": "^1.0.0-beta.24",
    "babel-eslint": "^7.1.1",
    "babel-jest": "^23.4.2",
    "babel-plugin-dynamic-import-node": "^2.0.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-stage-2": "^6.24.1",
